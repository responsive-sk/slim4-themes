{
    "name": "slim4/themes",
    "description": "Theme system for Slim 4 applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "slim/slim": "^4.0",
        "slim4/root": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "twig/twig": "^3.0",
        "latte/latte": "^3.0"
    },
    "suggest": {
        "twig/twig": "To use Twig as template engine",
        "latte/latte": "To use Latte as template engine"
    },
    "autoload": {
        "psr-4": {
            "Slim4\\Themes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slim4\\Themes\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    }
}